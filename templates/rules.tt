      <tr> <td>Pacifist</td>                                         <td align="right">   2&times;</td> </tr>
      <tr> <td>Nudist</td>                                           <td align="right">   2&times;</td> </tr>
      <tr> <td>Foodless</td>                                         <td align="right">   2&times;</td> </tr>
